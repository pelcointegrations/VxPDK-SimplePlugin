<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="OverlayExePlugin.MainUserControl"
	x:Name="UserControl"
    d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="Auto">
    
    <Grid>

        <Grid x:Name="buttonGrid">
        	<Grid.ColumnDefinitions>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        	</Grid.ColumnDefinitions>
            <ListBox Margin="10" Grid.Column="1" BorderBrush="#FF4F6793" BorderThickness="1" IsTabStop="True" ItemsSource="{Binding LogEntries}"/>
            <WrapPanel HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center">
            	<TextBlock Foreground="Blue" HorizontalAlignment="Center"
            		FontSize="20" FontFamily="Times New Roman" FontWeight="Bold" VerticalAlignment="Top" Text="Overlay Example" Margin="10,10,0,0" Width="200" TextAlignment="Center" Height="31"/>
            	<Button x:Name="initiateStreamsBtn" Width="200" Height="31" Content="InitiateStreams()" Margin="10,10,0,0" Click="initiateStreamsBtn_Click"/>
            	<Button x:Name="registerForThumbnailPreferenceBtn" Width="200" Height="31" Content="RegisterForThumbnailPreference()" Margin="10,10,0,0" Click="registerForThumbnailPreferenceBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FFA6EAEA" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="registerForOnScreenNotificationsBtn" Width="200" Height="31" Content="RegisterForOnScreenNotifications()" Margin="10,10,0,0" Click="registerForOnScreenNotificationsBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FF8D6D6B" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="registerForVideoCellNotificationsBtn" Width="200" Height="31" Content="RegisterForVideoCellNotifications()" Margin="10,10,0,0" Click="registerForVideoCellNotificationsBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FF8E8EDA" Offset="0.004"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFE4E4E4" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="SetVideoPositionBtn" Width="200" Height="31" Content="SetVideoPosition()" Margin="10,10,0,0" Click="SetVideoPositionBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FFDADA8E" Offset="0.017"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFE4E4E4" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="setOverlayAnchorBtn" Width="200" Height="31" Content="SetOverlayAnchor()" Margin="10,10,0,0" Click="setOverlayAnchorBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FF58575F" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="StoreCredentialsBtn" Width="200" Height="31" Content="StoreCredentials()" Margin="10,10,0,0" Click="StoreCredentialsBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FF77DA7C" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="requestCloseBtn" Width="200" Height="31" Content="RequestClose()" Margin="10,10,0,0" Click="requestCloseBtn_Click"/>
            	<Button x:Name="requestFullScreeBtn" Width="200" Height="31" Content="RequestFullScreen()" Margin="10,10,0,0" Click="requestFullScreeBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FFEA9CEE" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="returnFromFullScreenBtn" Width="200" Height="31" Content="ReturnFromFullScreen()" Margin="10,10,0,0" Click="returnFromFullScreenBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FFE7A8EA" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="#FFCDCDCD" Offset="1"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            	<Button x:Name="reportFatalErrorBtn" Width="200" Height="31" Content="ReportFatalError()" Margin="10,10,0,0" Click="reportFatalErrorBtn_Click">
            		<Button.Background>
            			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            				<GradientStop Color="#FFFF1818" Offset="0"/>
            				<GradientStop Color="#FFEBEBEB" Offset="0.5"/>
            				<GradientStop Color="#FFDDDDDD" Offset="0.5"/>
            				<GradientStop Color="Red" Offset="0.996"/>
            			</LinearGradientBrush>
            		</Button.Background>
            	</Button>
            </WrapPanel>

            <Grid x:Name="anchorGrid">
        		<Rectangle Stroke="Black">
        			<Rectangle.Fill>
        				<RadialGradientBrush>
        					<GradientStop Color="#FFA6A6A6" Offset="0.009"/>
        					<GradientStop Color="WhiteSmoke" Offset="1"/>
        				</RadialGradientBrush>
        			</Rectangle.Fill>
        		</Rectangle>
        		<Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        			<StackPanel>
        				<StackPanel x:Name="anchoredStack" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
        					<TextBlock TextWrapping="Wrap" Text="anchoredTo: " TextAlignment="Right" Width="90"/>
        					<ComboBox x:Name="anchorCombo" Text="inFront" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,0,-20,0">
        						<ComboBoxItem x:Name="cb1" Content="inFront"/>
        						<ComboBoxItem x:Name="cb2" Content="left"/>
        						<ComboBoxItem x:Name="cb3" Content="top"/>
        						<ComboBoxItem x:Name="cb4" Content="right"/>
        						<ComboBoxItem x:Name="cb5" Content="bottom"/>
        					</ComboBox>
        				</StackPanel>
        				<StackPanel x:Name="percentageStack" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,-0.001,0">
        					<TextBlock TextWrapping="Wrap" Text="percentage: " TextAlignment="Right" Width="90"/>
        					<TextBox x:Name="percentageText" Height="23" TextWrapping="Wrap" Text="50" Width="120"/>
        				</StackPanel>
        				<StackPanel x:Name="minStack" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,-0.001,0">
        					<TextBlock TextWrapping="Wrap" Text="min width: " TextAlignment="Right" Width="90"/>
        					<TextBox x:Name="mininumText" Height="23" TextWrapping="Wrap" Text="100" Width="120"/>
        				</StackPanel>
        				<StackPanel x:Name="maxStack" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,-0.001,0">
        					<TextBlock TextWrapping="Wrap" Text="max width: " TextAlignment="Right" Width="90"/>
        					<TextBox x:Name="maximumText" Height="23" TextWrapping="Wrap" Text="999999" Width="120"/>
        				</StackPanel>
        				<StackPanel x:Name="buttonStack" Margin="0,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
        					<Button x:Name="cancelBtn" Content="Cancel" Width="70" Margin="10,0,0,0" Click="cancelBtn_Click"/>
        					<Button x:Name="submitAnchorBtn" Content="SetOverlayAnchor()" Width="120" Margin="10,0,0,0" Click="submitAnchorBtn_Click"/>
        				</StackPanel>
        			</StackPanel>
        		</Grid>
        	</Grid>
        </Grid>
        
        <Grid Visibility="{Binding Loading}">
        	<Rectangle Stroke="Black" Fill="Black"/>
        	<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Text="Loading..." FontSize="64" Margin="0,-75,0,0">
        		<TextBlock.Foreground>
        			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        				<GradientStop Color="#FF00A0FB" Offset="0.013"/>
        				<GradientStop Color="#FF1A2227" Offset="1"/>
        			</LinearGradientBrush>
        		</TextBlock.Foreground>
        	</TextBlock>
        	<ProgressBar HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="253" Margin="0,60,0,0" Foreground="#FF017DD3" IsIndeterminate="True">
        		<ProgressBar.BorderBrush>
        			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
        				<GradientStop Color="#FFB2B2B2" Offset="0"/>
        				<GradientStop Color="#FF547A95" Offset="1"/>
        			</LinearGradientBrush>
        		</ProgressBar.BorderBrush>
        		<ProgressBar.Background>
        			<LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
        				<GradientStop Color="#FF9CAAB2" Offset="0"/>
        				<GradientStop Color="#FFB4C6D1" Offset="0.509"/>
        				<GradientStop Color="#FFA8C0D1" Offset="1"/>
        			</LinearGradientBrush>
        		</ProgressBar.Background>
        	</ProgressBar>
        </Grid>

    </Grid>

</UserControl>
