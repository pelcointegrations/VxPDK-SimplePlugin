<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cb="clr-namespace:UI.Components.Buttons"
    xmlns:c="clr-namespace:UI.Components"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"    
 	mc:Ignorable="d"
    xmlns:local="clr-namespace:DragDropPlugin" x:Class="DragDropPlugin.MainUserControl"
	x:Name="UserControl"
    d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="Auto">
  
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/PluginMasterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource WindowBackgroundColorBrush}">

        <Grid Visibility="{Binding SlidesActive}">
            <Grid>
            	<Grid.ColumnDefinitions>
            		<ColumnDefinition Width="Auto"/>
            		<ColumnDefinition/>
            		<ColumnDefinition Width="Auto"/>
            		<ColumnDefinition Width="Auto"/>
            	</Grid.ColumnDefinitions>
        	    <Grid.RowDefinitions>
        		    <RowDefinition Height="Auto"/>
        		    <RowDefinition/>
        		    <RowDefinition Height="Auto"/>
        	    </Grid.RowDefinitions>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <c:HoverImageButton x:Name="PrevBtn" Margin="9,6,6,6"
                        NormalImage="{StaticResource BrowserBack}" 
                        HoverImage="{StaticResource BrowserBackHover}" 
                        DisabledImage="{StaticResource BrowserBackDisabled}" 
                        IsEnabled="True"                                        
                        Height="20"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="Prev_Click"/>
                    <c:HoverImageButton x:Name="NextBtn" Margin="0,6,6,6"
                        NormalImage="{StaticResource BrowserNext}" 
                        HoverImage="{StaticResource BrowserNextHover}" 
                        DisabledImage="{StaticResource BrowserNextDisabled}" 
                        IsEnabled="True"                                        
                        Height="20"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="Next_Click"/>
                </StackPanel>
                <c:HoverImageButton x:Name="CloseButton" Margin="12,4,12,4"
                    NormalImage="{StaticResource CloseSmallLgImage}" 
                    HoverImage="{StaticResource CloseSmallHoverLgImage}" 
                    Height="10"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Click="Close_Click" Grid.Column="3" />

                <Ellipse Fill="Green" x:Name="leftEllipse"
                    HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Center" Width="100"
                    Margin="20,0,0,0" Grid.RowSpan="4" Grid.ColumnSpan="4"                         
                    MouseMove="ellipse_MouseMove"
                    GiveFeedback="ellipse_GiveFeedback"
                    AllowDrop="True"
                    DragEnter="ellipse_DragEnter" DragLeave="ellipse_DragLeave"
                    DragOver="ellipse_DragOver" Drop="ellipse_Drop" />

                <Ellipse Fill="Yellow" x:Name="rightEllipse"
                	HorizontalAlignment="Right" Height="100" Stroke="Black" VerticalAlignment="Center" Width="100"
                	Margin="0,0,20,0"  Grid.RowSpan="4" Grid.ColumnSpan="4" 
                	MouseMove="ellipse_MouseMove"
                	GiveFeedback="ellipse_GiveFeedback"
                	AllowDrop="True"
                	DragEnter="ellipse_DragEnter" DragLeave="ellipse_DragLeave"
                	DragOver="ellipse_DragOver" Drop="ellipse_Drop" />

                <Grid Grid.Row="2" Grid.ColumnSpan="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,6">
                    	<cb:SeButton Content="Add Image..."  Margin="0" Style="{StaticResource SmallButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Add_Click"/>
                    	<cb:SeButton Content="Filter Images..."  Margin="6,0,0,0" Style="{StaticResource SmallButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Filter_Click"/>
                    	<cb:SeButton Content="Settings..."  Margin="6,0,0,0" Style="{StaticResource SmallButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Settings_Click"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:Name="leftBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20,95,0,74.2" Grid.Row="1" Width="100" Height="73" TextAlignment="Center" IsHitTestVisible="False"/>
                <TextBlock x:Name="rightBlock" HorizontalAlignment="Right" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Grid.RowSpan="4" Grid.ColumnSpan="4" Margin="0,95,20,74.2" Width="100" Height="73" TextAlignment="Center" IsHitTestVisible="False"/>
            </Grid>
        </Grid>
        <Grid Visibility="{Binding Loading}" d:IsHidden="True">
        	<Rectangle Stroke="Black" Fill="Black"/>
        	<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Text="Loading..." FontSize="64" Margin="0,-75,0,0">
        		<TextBlock.Foreground>
        			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        				<GradientStop Color="#FFADB5B9" Offset="0.013"/>
        				<GradientStop Color="#FF13191D" Offset="1"/>
        			</LinearGradientBrush>
        		</TextBlock.Foreground>
        	</TextBlock>
        	<ProgressBar HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="253" Margin="0,60,0,0" Foreground="#FFFBFBFB" IsIndeterminate="True">
        		<ProgressBar.BorderBrush>
        			<LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
        				<GradientStop Color="#FF424242" Offset="0"/>
        				<GradientStop Color="#FF080808" Offset="1"/>
        			</LinearGradientBrush>
        		</ProgressBar.BorderBrush>
        		<ProgressBar.Background>
        			<LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
        				<GradientStop Color="Black" Offset="0"/>
        				<GradientStop Color="#FF2E2E2E" Offset="0.509"/>
        				<GradientStop Color="Black" Offset="1"/>
        			</LinearGradientBrush>
        		</ProgressBar.Background>
        	</ProgressBar>
        </Grid>

    </Grid>

</UserControl>
